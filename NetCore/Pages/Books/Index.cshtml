@page
@model NetCore.Pages.Books.IndexModel
@{
}
<div class="container row p-0 m-0">
    <div class="col-9">
        <h1 class="display-4">Books</h1>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-primary">Create New Book</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books != null && Model.Books.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Actions</th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Nom)</td>
                            <td>@Html.DisplayFor(m => item.Autor)</td>
                            <td>@Html.DisplayFor(m => item.ISBN)</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Estàs segur que ho vols borrar')" class="btn btn-danger">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books found</p>
            }
        </form>
    </div>
</div>

<div class="col-12" style="text-align:center">
    <br />
    <span class="h3 text-info">OR</span>
    <br /><br />
</div>

<div class="col-12 border p-3">
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/book.js"></script>
}
